scope: {{ patroni_cluster_name }}
namespace: /service/
name: {{ inventory_hostname }}

restapi:
  listen: {{ ansible_host }}:{{ patroni_rest_api_port }}
  connect_address: {{ ansible_host }}:{{ patroni_rest_api_port }}

etcd3:
  hosts: 127.0.0.1:{{ etcd_client_port }}

bootstrap:
  dcs:
    ttl: 30
    loop_wait: 10
    retry_timeout: 10
    maximum_lag_on_failover: 1048576
    postgresql:
      use_pg_rewind: true
      use_slots: true
      parameters:
        archive_mode: "on"
        archive_command: "cp %p /mnt/nfs/archive/%f" # 事前にマウントが必要
        wal_level: replica
        hot_standby: "on"
        max_wal_senders: 10
        max_replication_slots: 10

  # 初回起動時のDB作成設定
  initdb:
  - encoding: UTF8
  - data-checksums

postgresql:
  listen: 0.0.0.0:{{ patroni_postgresql_port }}
  connect_address: {{ ansible_host }}:{{ patroni_postgresql_port }}
  data_dir: {{ postgres_data_dir }}
  bin_dir: {{ postgres_bin_path }}
  pgpass: /tmp/pgpass
  authentication:
    replication:
      username: replicator
      password: {{ replicator_password | default('repl_password') }}
    superuser:
      username: postgres
      password: {{ postgres_superuser_password | default('post_password') }}
  parameters:
    unix_socket_directories: '/var/run/postgresql'
  pg_hba:
    - host all all 127.0.0.1/32 trust        # ローカル接続を許可
    - host all all 192.168.5.0/24 md5        # 192.168.5.x セグメントからの全DB接続を許可
    - host replication replicator 192.168.5.0/24 md5  # レプリケーション用の接続を許可

tags:
  nosql: false
  clonefrom: false
